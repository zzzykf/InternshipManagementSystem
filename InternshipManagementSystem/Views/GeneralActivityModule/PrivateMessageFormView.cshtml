@model InternshipManagementSystem.Models.PrivateMessageModel

<h2>New Message</h2>
<div class="container">
    <div class="col-lg-12 well">
        <div class="row">
            @using (Html.BeginForm("PrivateMessageFormView", "GeneralActivityModule", FormMethod.Post, new { }))
            {
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-4 form-group" style="text-align:right;">
                            To :
                        </div>
                        <div class="col-sm-8 form-group">
                         @Html.DropDownListFor(model => model.Receiver, new SelectList(Model.ReceiverList, "Username", "FullName"),"- -Select- -")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 form-group" style="text-align:right;">
                            Message :
                        </div>
                        <div class="col-sm-8 form-group">
                         @Html.TextAreaFor(model => model.Message, new { cols = 35, @rows = 3 })
                        </div>
                    </div>
                    <div class="row" style="margin-left:40%;">
                        <button style="margin-top: 20px;" type="submit" class="btn btn-lg btn-info">Send</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>